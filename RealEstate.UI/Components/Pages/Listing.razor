@page "/listing"
<div class="max-w-7xl mx-auto px-4 py-24">
    <h1 class="text-3xl font-bold mb-8">Property Listings</h1>

    <div class="bg-white p-4 rounded-lg shadow-md mb-8">
        <div class="flex flex-wrap gap-4 items-center">
            <div class="flex-1 min-w-[200px]">
                <label for="location" class="block text-sm font-medium text-gray-700">Location</label>
                <input type="text" id="location" class="mt-1 p-2 w-full border rounded-md focus:ring-blue-500 focus:border-blue-500">
            </div>
            <div class="flex-1 min-w-[150px]">
                <label for="propertyType" class="block text-sm font-medium text-gray-700">Property Type</label>
                <select id="propertyType" class="mt-1 p-2 w-full border rounded-md focus:ring-blue-500 focus:border-blue-500">
                    <option value="">All</option>
                    <option value="house">House</option>
                    <option value="apartment">Apartment</option>
                    <option value="villa">Villa</option>
                </select>
            </div>
            <div class="flex-1 min-w-[150px]">
                <label for="priceRange" class="block text-sm font-medium text-gray-700">Price Range</label>
                <select id="priceRange" class="mt-1 p-2 w-full border rounded-md focus:ring-blue-500 focus:border-blue-500">
                    <option value="">Any</option>
                    <option value="0-500000">$0 - $500,000</option>
                    <option value="500000-1000000">$500,000 - $1,000,000</option>
                    <option value="1000000+">$1,000,000+</option>
                </select>
            </div>
            <div>
                <button class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 mt-6 rounded">
                    Filter
                </button>
            </div>
        </div>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">

        <div class="bg-white rounded-lg shadow-md overflow-hidden">
            <img class="w-full h-64 object-cover" src="https://picsum.photos/400/300?random=20" alt="Listing Image">
            <div class="p-4">
                <h3 class="text-xl font-semibold mb-2">Luxury Apartment in City Center</h3>
                <p class="text-gray-600 mb-2">Çankaya, Ankara</p>
                <p class="text-gray-800 font-bold text-lg mb-2">$2,500/mo</p>
                <div class="flex justify-between text-gray-500 text-sm">
                    <div><i class="fas fa-bed mr-1"></i> 2 Beds</div>
                    <div><i class="fas fa-bath mr-1"></i> 2 Baths</div>
                    <div><i class="fas fa-ruler-combined mr-1"></i> 110m²</div>
                </div>
            </div>
            <div class="p-4 border-t">
                <a href="#" class="text-blue-600 hover:underline">View Details</a>
            </div>
        </div>

        <!-- Listing Card 2 -->
